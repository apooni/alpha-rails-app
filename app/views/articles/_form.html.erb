<% if @article.errors.any? %>
<h2>The following errors prevented the articles from getting created.</h2>
<ul>
<% @article.errors.full_messages.each do |msg|%>
<li><%= msg %></li>
<% end %>
</ul>
<% end %>

<div class="row">
<div class="col-xs-12">
  <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |rl|%>
  <div class="form-group">
    <div class="control-label col-sm-2">
      <%= rl.label :Title%>
    </div>

    <div class="col-sm-8">
      <%= rl.text_field :title, class: "form-control", placeholder: "title of article", autofocus: true %>
    </div>
  </div>

  <div class="form-group"
    <div class=" control-label col-sm-8 ">
      <%= rl.label :Description %>
    </div>

    <div class="col-md-push-3 col-sm-10">
      <%= rl.text_area :description, rows: 10, class: "form-control", placeholder: "Body of article" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= rl.submit class: 'btn btn-primary btn-lg' %>
    </div>
  </div>
  <% end %>
    <div class="col-xs-5 col-xs-offset-4">
 [ <%= link_to "Cancel request and return to article listing", articles_path%> ]
    </div>
</div>
  </div>
