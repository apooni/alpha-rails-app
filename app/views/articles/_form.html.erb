<% if @article.errors.any? %>
<h2>The following errors prevented the articles from getting created.</h2>
<ul>
<% @article.errors.full_messages.each do |msg|%>
<li><%= msg %></li>
<% end %>
</ul>
<% end %>
<%= form_for @article do |rl|%>
<p>
  <%= rl.label :title%><br/>
  <%= rl.text_field :title %>
</p>
  <p>
    <%= rl.label :description %><br/>
    <%= rl.text_area :description %>
  </p>
  <p>
    <%= rl.submit %>
  </p>

<% end %>
<%= link_to "Back to article listing", articles_path%>
